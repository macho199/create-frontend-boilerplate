root = true

# 기본 설정
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.html]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
single_quote = true

# Markdown / JSON (가끔 특수 포맷들)
[*.{md,json,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false
